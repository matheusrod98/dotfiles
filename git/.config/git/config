    email = matheusrodrigues@poli.ufrj.br

[core]
    editor = nvim
    pager = bat --style=plain
    excludesfile = /home/matheus/.config/git/.gitignore

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[diff]
    tool = kitty
    guitool = kitty.gui

[difftool]
    prompt = false
    trustExitCode = true

[difftool "kitty"]
    cmd = kitten diff $LOCAL $REMOTE

[difftool "kitty.gui"]
    cmd = kitten diff $LOCAL $REMOTE

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

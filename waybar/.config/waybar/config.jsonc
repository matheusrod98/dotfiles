{
  "layer": "top",
  "height": 18,
  "spacing": 4,

  "modules-left": ["hyprland/workspaces"],
  "hyprland/workspaces": {
    "format": "{icon}"
  },

  "modules-right": [
    "mpris",
    "custom/scratchpad",
    "tray",
    "pulseaudio",
    "bluetooth",
    "network",
    "cpu",
    "memory",
    "temperature",
    "battery",
    "clock"
  ],
  "mpris": {
    "interval": 1,
    "format": "{player_icon} <i>{artist} - {title} - {position}/{length}</i>",
    "format-paused": "{status_icon} <i>{artist} - {title} - {position}/{length}</i>",
    "title-len": 30,
    "artist-len": 20,
    "player-icons": {
      "default": "‚ñ∂",
      "mpv": "üéµ"
    },
    "status-icons": {
      "paused": "‚è∏"
    }
    // "ignored-players": ["firefox", "brave", "chromium", "google-chrome"]
  },
  "custom/scratchpad": {
    "exec": "windows=$(hyprctl -j workspaces | jq -rc '.[] | select(.'id'==-99).windows'); if [[ $windows -gt 0 ]]; then echo $windows; else echo '0'; fi",
    "interval": 1,
    "format": "Ôãí  {}"
  },
  "cpu": {

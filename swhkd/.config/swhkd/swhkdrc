# Apps
super + t
    foot
super + b
    flatpak run org.mozilla.firefox
super + a
    foot pulsemixer
super + m
    foot btop
super + n
    flatpak run com.logseq.Logseq
super + s
    flatpak run com.spotify.Client
super + d
    flatpak run com.discordapp.Discord
super + c
    foot qalc
super + f 
    thunar
super + e
    foot nvim

# Rofi
super + space 
    rofi -combi-modi "window,drun" -show combi
super + v
    rofi -modi clipboard:~/.local/bin/scripts/rofi/cliphist_rofi.sh -show clipboard
super + semicolon
    rofi -modi emoji -show emoji
super + shift + escape
    ~/.local/bin/scripts/rofi/rofi-power.sh
super + p
    ~/.local/bin/scripts/rofi/rofi-pass.sh

# Lockscreen
super + escape
    ~/.local/bin/scripts/lock.sh

# Brightness control
# brightnessup
#     brightnessctl set 10%+
# brightnessdown
#     brightnessctl set 10%-

# Audio control
volumeup
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
volumedown
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
mute
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
shift + volumeup
    wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 5%+
shift + volumedown
    wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 5%-
shift + mute
    wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle

# Screenshoting
# print
#     grimblast copysave screen ~/Pictures/Screenshots/$(date +%Y%m%d_%Hh%Mm%Ss)_grimblast.png
# super + print
#     grimblast copysave area ~/Pictures/Screenshots/$(date +%Y%m%d_%Hh%Mm%Ss)_grimblast.png
